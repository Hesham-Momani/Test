@model GroceryStore.Models.Product

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="page-inner">
        <h1>Create Product</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductDescription" class="control-label"></label>
                        <input asp-for="ProductDescription" class="form-control" />
                        <span asp-validation-for="ProductDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductPrice" class="control-label"></label>
                        <input asp-for="ProductPrice" class="form-control" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Image">Upload Image</label>
                        <input type="file" asp-for="ProductImg" class="form-control" />
                        <span asp-validation-for="ProductImg" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="CategoryId" type="hidden" value="@ViewData["CategoryId"]" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" asp-route-id=@ViewData["CategoryId"]>Back to List</a>
        </div>


    </div>
</div>