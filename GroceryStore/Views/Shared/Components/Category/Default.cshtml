@model IEnumerable<Category>

<section class="ftco-section ftco-category ftco-no-pt">
    <div class="container">
        <div class="row">
            @foreach(var item in Model)
            {
                <div class="col-md-6">

                    <div  class="category-wrap ftco-animate img mb-4 d-flex align-items-end" style="background-image:url('/Systemimages/@item.CategoryImage');">
                        <div class="text px-3 py-1">
                            <h2 class="mb-0"><a asp-action="Product" asp-controller="Home" asp-route-id="@item.CategoryId">@item.CategoryName</a></h2>
                        </div>
                    </div>
                </div>
            }
     
        </div>
    </div>
</section>