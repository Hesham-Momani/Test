<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 mb-5 text-center">
                <ul class="product-category">
                    <li><a asp-action="Product" asp-controller="Home" asp-route-id="0">All</a></li>
                    @foreach (var item in (List<Category>)ViewBag.Category)
                    {
                        <li><a asp-action="Product" asp-controller="Home" asp-route-id="@item.CategoryId">@item.CategoryName</a></li>
                    }
                </ul>
            </div>
        </div>
        <div class="row">
            <!-- Row for products -->
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-3 ftco-animate">
                    <div class="product">
                        <a href="#" class="img-prod">
                            <img class="img-fluid" src="~/Systemimages/@item.ProductImg" alt="Product Image">
                            <div class="overlay"></div>
                        </a>
                        <div class="text py-3 pb-4 px-3 text-center">
                            <h3><a href="#">@item.ProductName</a></h3>
                            <div class="d-flex">
                                <div class="pricing">
                                    <p class="price"><span>@item.ProductPrice JD</span></p>
                                </div>
                            </div>
                            <div class="bottom-area d-flex px-3">
                                <div class="m-auto d-flex">
                                    <a asp-action="DetailsProduct" asp-controller="Home" asp-route-id="@item.ProductId" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                                        <span><i class="ion-ios-menu"></i></span>
                                    </a>
                                    <a asp-action="Cart" asp-controller="Home" asp-route-id="@item.ProductId" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                        <span><i class="ion-ios-cart"></i></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
